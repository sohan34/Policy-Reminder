<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    tools:context=".AddEditPolicyActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Policy"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/PNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Policy Name"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_hint"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="Policy Name"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/text_hint"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:textColor="@color/on_background" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/PNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Policy Number"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_hint"
            app:layout_constraintStart_toStartOf="@id/tilNumber"
            app:layout_constraintTop_toBottomOf="@id/tilName" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNumber"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Policy Number"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/text_hint"
            app:layout_constraintTop_toBottomOf="@id/tilName">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters"
                android:textColor="@color/on_background" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilStatus"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Status"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/text_hint"
            app:layout_constraintTop_toBottomOf="@id/tilNumber">

            <AutoCompleteTextView
                android:id="@+id/etStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="Active"
                android:textColor="@color/on_background" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvStartDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Start Date"
            android:textColor="@color/text_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilStatus" />

        <TextView
            android:id="@+id/tvStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_date_input"
            android:padding="12dp"
            android:text="Select Date"
            android:textColor="@color/on_surface"
            android:textSize="16sp"
            app:drawableEndCompat="@drawable/ic_calendar_24"
            app:layout_constraintTop_toBottomOf="@id/tvStartDateLabel" />

        <TextView
            android:id="@+id/tvEndDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="End Date (Expiry)"
            android:textColor="@color/text_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStartDate" />

        <TextView
            android:id="@+id/tvEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_date_input"
            android:padding="12dp"
            android:text="Select Date"
            android:textColor="@color/on_surface"
            android:textSize="16sp"
            app:drawableEndCompat="@drawable/ic_calendar_24"
            app:layout_constraintTop_toBottomOf="@id/tvEndDateLabel" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:text="Save Policy"
            android:backgroundTint="@color/primary"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvEndDate" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:text="Delete Policy"
            android:backgroundTint="@color/error"
            android:visibility="gone"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnSave"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
